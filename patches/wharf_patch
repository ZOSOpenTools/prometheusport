+const openMode = unix.O_EVTONLY | unix.O_CLOEXEC
diff --git a/go_package_port/github.com/fsnotify/fsnotify/system_darwin_test.go b/go_package_port/github.com/fsnotify/fsnotify/system_darwin_test.go
