+		if mask&n.m == n.m {
+			l = append(l, n.n)
+		}
+	}
+	fmt.Fprintf(os.Stderr, "%s  %-20s  %s\n", time.Now().Format("15:04:05.0000"), strings.Join(l, " | "), name)
+}
